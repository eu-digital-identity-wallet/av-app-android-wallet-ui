<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/nfc_screen_padding">

        <!-- Title -->
        <TextView
            android:id="@+id/tv_nfc_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nfc_title_padding_top"
            android:paddingBottom="@dimen/nfc_title_padding_bottom"
            android:text="@string/nfc_title_initial"
            android:textColor="@color/nfc_title_color"
            android:textSize="@dimen/nfc_title_text_size"
            android:textStyle="bold" />

        <!-- Passport Image -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iconNfc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:paddingBottom="@dimen/nfc_image_padding_bottom"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_passport_reading" />

        <!-- Body text -->
        <TextView
            android:id="@+id/tv_nfc_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/nfc_body_padding_bottom"
            android:text="@string/nfc_body_initial"
            android:textColor="@color/nfc_body_color"
            android:textSize="@dimen/nfc_body_text_size" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:max="100"
            android:paddingBottom="@dimen/nfc_progress_padding_bottom"
            android:progress="0"
            android:progressBackgroundTint="@color/nfc_progress_track_color"
            android:progressTint="@color/nfc_progress_color"
            android:visibility="gone" />

        <!-- Help Link (minHeight for meeting min touch area) -->
        <TextView
            android:id="@+id/tv_help_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="48dp"
            android:paddingTop="@dimen/nfc_link_padding_top"
            android:paddingBottom="@dimen/nfc_link_padding_bottom"
            android:text="@string/nfc_help_link"
            android:textColor="@color/nfc_link_color"
            android:textSize="@dimen/nfc_body_text_size" />

    </LinearLayout>
</ScrollView>
